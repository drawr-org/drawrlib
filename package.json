    "url": "https://github.com/drawr-team/core-lib/issues"
  },
  "homepage": "https://github.com/drawr-team/core-lib#readme",
  "devDependencies": {
    "babel": "^6.5.2",
    "babel-cli": "^6.18.0",
    "babel-core": "^6.18.2",
    "babel-loader": "^6.2.7",
    "babel-preset-es2015": "^6.22.0",
    "babel-preset-es2016": "^6.22.0",
    "chai": "^3.5.0",
    "esdoc": "^0.5.2",
    "eslint": "^3.11.1",
    "ink-docstrap": "^1.3.0",
    "istanbul-instrumenter-loader": "^1.0.0",
    "jasmine-core": "^2.5.2",
    "karma": "^1.3.0",
    "karma-chai": "^0.1.0",
    "karma-chrome-launcher": "^2.0.0",
    "karma-coverage": "^1.1.1",
    "karma-jasmine": "^1.0.2",
    "karma-mocha": "^1.3.0",
    "karma-webpack": "^1.8.0",
    "minimist": "^1.2.0",
    "mocha": "^3.1.2",
    "webpack": "^1.13.3"
  },
  "dependencies": {
    "eventemitter3": "^2.0.2",
    "websocket": "^1.0.23",
    "xhr": "^2.3.3"
